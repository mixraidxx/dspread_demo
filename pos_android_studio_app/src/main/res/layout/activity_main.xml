<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentScrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none">

    <LinearLayout android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_anim_scanbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <com.dspread.demoui.InnerListview
            android:id="@+id/lv_indicator_BTPOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#FFA0A0A0"
            android:dividerHeight="1dp"
            android:listSelector="#00FFFFFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none"
            android:visibility="gone">
        </com.dspread.demoui.InnerListview>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/please_select_bt_name"/>

            <Button
                android:id="@+id/serialPort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/open_serial_port"
                android:visibility="gone"/>

            <Button
                android:visibility="gone"
                android:id="@+id/doTradeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="CR100 交易"/>

            <Button
                android:id="@+id/doTradeA27Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Start Trade"
                android:visibility="visible" />

            <Button
                android:id="@+id/disconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/disconnect"/>

            <Button
                android:id="@+id/btnUSB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scan_usb_device"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <Button
                android:visibility="gone"
                android:id="@+id/updateFW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="update" />

            <Button
                android:id="@+id/generateTransportKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="generateTransportKey"
                />

            <Button
                android:id="@+id/updateIPEKByTransportKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateIPEKByTransportKey"
                />

            <Button
                android:id="@+id/updateWorkKeyByTransportKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateWorkKeyByTransportKey"
                />

            <Button
                android:id="@+id/getTransportKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="getTransportKey"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/updateIPEKbyRSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateIPEKbyRSA"
                android:visibility="gone"
                />
            />

            <Button
                android:visibility="gone"
                android:id="@+id/updateWorkey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateWorkey"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/updateIPEK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateIPEK"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/powerOnICC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="powerOnICC"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/selectApplet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="selectApplet"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/getTrackData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="getTrackData"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/powerOffICC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="powerOffICC"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/injectAllIpek1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="injectAllIpek"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/injectAllIpek2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="injectAllIpek"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/updateTMKToDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateTMKToDefault"
                />

            <Button
                android:id="@+id/btnCrateSignMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="creat Signature Date"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnQuickEMV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_quick_emv"
                android:visibility="gone"/>

            <Button

                android:id="@+id/btnEMVTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="test emv update TLV"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAutoEMV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="auto emv update"
                android:visibility="gone"/>


            <Button
                android:id="@+id/btnQuickEMVtrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_quick_emv_trade"
                android:visibility="gone"/>

            <Button
                android:id="@+id/updateRSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateRSA"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/testMifare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="testMifare"
                android:visibility="gone"/>

            <Button
                android:id="@+id/sessionKeys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="generateSessionKeys"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_apdu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="apdu string"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:id="@+id/powerOn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="powerOn"
                    />

                <Button
                    android:id="@+id/sendApdu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="sendApdu"/>

                <Button
                    android:id="@+id/powerOff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="powerOff"/>

            </LinearLayout>


            <EditText
                android:id="@+id/keyindex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:hint="key index"
                android:visibility="visible" />


            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/statusEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:editable="false"/>

            <EditText
                android:id="@+id/chipStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:hint="chip data"
                />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/mifareid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/search_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/poll_card"/>

                <Button
                    android:id="@+id/verify_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_card"/>

                <Spinner
                    android:id="@+id/verift_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/li"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/operate_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/operate_card"/>

                <Spinner
                    android:id="@+id/cmd_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/li3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/read_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read_card"/>

                <Button
                    android:id="@+id/write_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/write_card"/>

                <Button
                    android:id="@+id/transfer_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfer_card"/>

            </LinearLayout>

            <Button
                android:id="@+id/finish_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finish_card"/>

            <RelativeLayout
                android:id="@+id/ra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/li2">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="key value or cardData:"/>

                <EditText
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv"
                    android:hint="please input key value or cardData"
                    android:text="ffffffffffff"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ra2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ra">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="block addr:"/>

                <EditText
                    android:id="@+id/block_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv2"
                    android:hint="please input block addr"
                    android:text="0A"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ul_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/li4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/poll_ulcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/poll_card"/>

                <Button
                    android:id="@+id/verify_ulcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_card"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/get_ul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="get UL Info"/>

                <Button
                    android:id="@+id/write_ul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="write UL"/>

                <Button
                    android:id="@+id/read_ulcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="read UL"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fast_read_ul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fase read UL"/>

                <Button
                    android:id="@+id/finish_ulcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_card"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ra11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/li2">

                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="key value or cardData:"/>

                <EditText
                    android:id="@+id/status11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv11"
                    android:hint="please input key value or cardData"
                    android:text="ffffffffffff"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ra12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ra">

                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="block addr:"/>

                <EditText
                    android:id="@+id/block_address11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv12"
                    android:hint="please input block addr"
                    android:text="0A"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>